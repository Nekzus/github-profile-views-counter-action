{
    "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "noCommonJs": "error"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "tab",
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    }
}