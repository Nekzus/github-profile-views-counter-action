{
  "name": "github-profile-views-counter-action",
  "version": "1.1.1",
  "description": "GitHub Profile Views Counter Action",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "biome:format": "biome format --write src",
    "biome:lint": "biome lint --write src",
    "biome:check": "biome check --write src",
    "build": "esbuild src/index.js --bundle --platform=node --target=node20 --outfile=dist/index.js --format=esm --minify --sourcemap --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url);\"",
    "test": "vitest run",
    "all": "npm run biome:check && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nekzus/github-profile-views-counter-action.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript",
    "Views",
    "Counter"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@octokit/rest": "^22.0.1",
    "fs-extra": "^11.3.3",
    "simple-git": "^3.30.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "esbuild": "^0.27.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}